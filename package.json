{
	"name": "gitversionstatusbar",
	"displayName": "GitVersion Status Bar",
	"description": "Display the actual git version of the current branch.",
	"version": "0.2.0",
	"publisher": "jakub-medrzak",
	"engines": {
		"vscode": "^1.107.0"
	},
	"keywords": [
		"GIT",
		"GitVersion",
		"Version",
		"Versioning",
		"Branch"
	],
	"license": "MIT",
	"homepage": "https://github.com/jakub-medrzak/GitVersionView",
	"bugs": {
		"url": "https://github.com/jakub-medrzak/GitVersionView/issues",
		"email": "jakub.medrzak@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jakub-medrzak/GitVersionView.git"
	},
	"categories": [
		"Other"
	],
	"icon": "images/package_icon.png",
	"activationEvents": [
		"*"
	],
	"extensionDependencies": [
		"vscode.git"
	],
	"contributes": {
		"configuration": [
			{
				"type": "object",
				"title": "GitVersion View",
				"properties": {
					"gitVersionView.versionFormat": {
						"type": "string",
						"enum": ["SemVer", "FullSemVer", "MajorMinorPatch", "InformationalVersion"],
						"default": "SemVer",
						"description": "Specify the version format."
					},
					"gitVersionView.command": {
						"type": "string",
						"enum": ["gitversion", "dotnet-gitversion"],
						"default": "gitversion",
						"description": "Specify the command of gitversion."
					}
				}
			}
		],
		"commands": [
			{
				"command": "extension.gitVersionView",
				"title": "Show GitVersion"
			}
		]
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"test": "npm run compile && npm run lint",
		"lint": "eslint src"
	},
	"devDependencies": {
		"@types/vscode": "^1.107.0",
		"@types/node": "22.x",
		"typescript-eslint": "^8.48.1",
		"eslint": "^9.39.1",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@electron/rebuild": "^4.0.2"
	}
}
